    "import pandas as pd\n",
    "import numpy as np\n",
    "from collections import namedtuple\n"
    "\n",
    "class Tile:\n",
    "    def __init__(self, index, row, column, value):\n",
    "        self.index = index\n",
    "        self.row = row\n",
    "        self.column = column\n",
    "        if self.column == 0:\n",
    "            self.column = 9\n",
    "        self.box = 3*((self.row-1)//3) + (self.column - 1)//3 + 1\n",
    "        self.value = value\n",
    "        if self.value > 0:\n",
    "            self.repr = self.value\n",
    "        else:\n",
    "            self.repr = ' '\n",
    "    \n",
    "    def __repr__(self):\n",
    "        return str(self.repr)\n",
    "        \n",
    "\n",
    "class Sudoku:\n",
    "    def __init__(self, csv_file):\n",
    "        self.file = pd.read_csv(csv_file, delimiter = ',', header = None)\n",
    "        self.init_csv()\n",
    "        self.box_col_row()\n",
    "        \n",
    "    def __repr__(self):\n",
    "        return \"The sudoku has tiles \\n\" + self.grid\n",
    "    \n",
    "    def init_csv(self):\n",
    "        self.sudoku_grid = {}\n",
    "        for i in range(9):\n",
    "            for j in range(9):\n",
    "                index = i*9 + j + 1\n",
    "                if self.file[j][i] in ['', ' '] :\n",
    "                    self.sudoku_grid['t'+str(index)] = Tile(index, i+1, j+1, 0)\n",
    "                else:\n",
    "                    self.sudoku_grid['t'+str(index)] = Tile(index, i+1, j+1, int(self.file[j][i]))\n",
    "                    \n",
    "    \n",
    "    def box_col_row(self):\n",
    "        self.boxes = {}\n",
    "        self.rows = {}\n",
    "        self.columns = {}\n",
    "        for i in range(1,10):\n",
    "            self.boxes[i] = sorted([tile.value for tile in self.sudoku_grid.values() if (tile.box == i and tile.value !=0)])\n",
    "            self.rows[i] = sorted([tile.value for tile in self.sudoku_grid.values() if (tile.row == i and tile.value !=0)])\n",
    "            self.columns[i] = sorted([tile.value for tile in self.sudoku_grid.values() if (tile.column == i and tile.value !=0)])\n",
    "        \n",
    "\n",
    "    def display(self):\n",
    "        number_line = 2*'| {} ¦ {} ¦ {} |' + '| {} ¦ {} ¦ {} |\\n'\n",
    "        fat_rule = 2*' ___ ___ ___ ' + ' ___ ___ ___ \\n'\n",
    "        rule = 2*' --- --- --- ' + ' --- --- --- \\n'\n",
    "        \n",
    "        self.value_list = [self.sudoku_grid['t'+str(index)].repr for index in range(1,82)]        \n",
    "        self.grid = (3*(fat_rule + 2*(number_line + rule) + number_line + fat_rule)).format(*self.value_list)\n",
    "        print(self.grid)\n",
    "\n",
    "sudoku = Sudoku('example.csv')\n",
    "sudoku.display()\n",
    "\n"
   ]
